{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PORT": "8000",
    "ELEVENLABS_API_KEY": "@elevenlabs-api-key",
    "OPENAI_API_KEY": "@openai-api-key",
    "HUGGINGFACE_API_KEY": "@huggingface-api-key"
  },
  "buildCommand": "npm run build",
  "installCommand": "npm run install:all"
} 