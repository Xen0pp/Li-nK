{
  "name": "link-accessibility-platform",
  "version": "1.0.0",
  "description": "LinK Accessibility Platform - A unified hub for assistive AI tools",
  "private": true,
  "scripts": {
    "setup": "chmod +x setup-project.sh && ./setup-project.sh",
    "start": "chmod +x start-unified-server.sh && ./start-unified-server.sh",
    "dev": "npm run start",
    "build": "npm run build:frontend",
    "vercel-build": "npm run build:frontend",
    "build:backend": "cd backend && npm install && npm run build",
    "build:frontend": "cd frontend && npm install && npm run build",
    "install:all": "npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "clean": "rm -rf backend/dist frontend/build logs/*.log",
    "stop": "pkill -f 'node dist/app.js' || true",
    "restart": "npm run stop && npm run start",
    "logs": "tail -f logs/server.log",
    "test:connectivity": "./test-connectivity.sh",
    "help": "echo '\nðŸš€ LinK Accessibility Platform Commands:\n  npm run setup     - Initialize the entire project\n  npm start         - Start the unified server\n  npm run build     - Build both frontend and backend\n  npm run clean     - Clean all build files\n  npm run stop      - Stop the server\n  npm run restart   - Restart the server\n  npm run logs      - View server logs\n  npm test          - Test connectivity\n'"
  },
  "keywords": [
    "accessibility",
    "ai",
    "assistive-technology",
    "react",
    "nodejs",
    "wcag",
    "inclusive-design"
  ],
  "author": "LinK Accessibility Platform Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@huggingface/inference": "^2.6.4",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "elevenlabs": "^0.8.2",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^13.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tesseract.js": "^5.0.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.10.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
} 