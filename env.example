# ======================================
# LinK Accessibility Platform - Environment Configuration
# ======================================
# Copy this file to .env and add your actual API keys
# NEVER commit the .env file to version control!

# ======================================
# SERVER CONFIGURATION
# ======================================
NODE_ENV=development
PORT=8000

# ======================================
# DATABASE CONFIGURATION (Optional)
# ======================================
# MongoDB (if using database instead of file storage)
MONGODB_URI=mongodb://localhost:27017/accessibility-hub

# PostgreSQL (alternative database option)
POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/accessibility_hub

# ======================================
# CORS CONFIGURATION
# ======================================
CORS_ORIGINS=http://localhost:8000,http://localhost:3000,http://localhost:5000

# ======================================
# RATE LIMITING
# ======================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ======================================
# FEATURE FLAGS
# ======================================
SWAGGER_ENABLED=true

# ======================================
# AI SERVICE API KEYS (Required for AI features)
# ======================================

# Google Gemini API (for chat assistant and text processing)
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_GEMINI_MODEL=gemini-1.5-flash

# Hugging Face API (for image captioning and NLP)
# Get your API key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_token_here

# ElevenLabs API (for text-to-speech)
# Get your API key from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# ======================================
# TRANSLATION SERVICE (Optional)
# ======================================
# LibreTranslate (for text translation)
LIBRETRANSLATE_URL=https://libretranslate.de
LIBRETRANSLATE_API_KEY=your_libretranslate_key_here

# ======================================
# SECURITY CONFIGURATION
# ======================================
# JWT Secret (if implementing authentication)
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters

# Session Secret (for session management)
SESSION_SECRET=your_super_secure_session_secret_here

# ======================================
# LOGGING CONFIGURATION
# ======================================
LOG_LEVEL=info
LOG_FILE=logs/application.log

# ======================================
# FILE UPLOAD CONFIGURATION
# ======================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads

# ======================================
# REDIS CONFIGURATION (Optional - for caching)
# ======================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# ======================================
# EMAIL CONFIGURATION (Optional - for notifications)
# ======================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# ======================================
# MONITORING & ANALYTICS (Optional)
# ======================================
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_id_here

# ======================================
# SECURITY HEADERS
# ======================================
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true 